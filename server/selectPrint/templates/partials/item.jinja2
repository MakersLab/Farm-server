
<div class="twelve columns item__image">
  <img class="item__image-ellement"
       src="{{ url_for('Select-Print.static', filename=items['paths']['image']+item['image-filename']) }}" alt="">
</div>
<br>

<br>
<div class="twelve columns bottom-row">
  <div class="twelve columns button-row">
    <div class="six columns aside">
      {% include "partials/select.jinja2" %}
    </div>
    <div class="six columns item__button aside">
      <button class="print-button" onClick="loadAndPrint('{{ item['gcode-filename'] }}',{{ count }})">PRINT</button>
    </div>
  </div>
  <div class="twelve columns description-row">
    <div class="six columns item__heading aside">
      <h2 class="item__heading-ellement centered">{{ item.name }}</h2>
    </div>
    <br>
    <div class="six columns item__description aside">
      <div class="description item__description-ellement centered">{{ item.description }}</div>
    </div>
  </div>
</div>
